<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <shape >
            <corners android:radius="20dp" />
            <!--<stroke-->
            <!--android:width="1dp"-->
            <!--android:color="@color/bule_pressed" />-->
            <solid android:color="@color/bule_pressed" />
        </shape>
    </item>


    <item android:state_activated="false" android:state_checked="true">

        <selector >
            <item>
                <layer-list>
                    <item>
                        <shape>
                            <solid android:color="@color/blue_2C8FEB" />
                            <padding android:right="1dp"/>
                            <padding android:top="1dp"/>
                            <padding android:bottom="1dp"/>
                            <padding android:left="1dp"/>
                            <corners android:radius="15dp" />
                        </shape>
                    </item>

                    <item android:left="45dp">
                        <shape android:shape="oval">
                            <solid android:color="@color/white" />
                            <corners android:radius="15dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>

    <item android:state_activated="false"  android:state_checked="false">
        <selector>
            <item>
                <layer-list>
                    <item>
                        <shape>
                            <solid android:color="@color/linecolor" />
                            <padding android:right="1dp"/>
                            <padding android:top="1dp"/>
                            <padding android:bottom="1dp"/>
                            <padding android:left="1dp"/>
                            <corners android:radius="15dp" />
                        </shape>
                    </item>

                    <item android:end="45dp">
                        <shape android:shape="oval">
                            <solid android:color="@color/white" />
                            <corners android:radius="15dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>



</selector>